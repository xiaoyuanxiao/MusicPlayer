<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_recommendrecords"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fg_listenerbook_recommend"
            style="@style/tv_weight"
            android:text="@string/recommend"
            android:textColor="@color/main_buttomtext_yellow" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/tv_fg_listenerbook_classify"
            style="@style/tv_weight"
            android:text="@string/classify"
            android:textColor="@color/main_buttomtext_grey" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/tv_fg_listenerbook_booklist"
            style="@style/tv_weight"
            android:text="@string/booklist"
            android:textColor="@color/main_buttomtext_grey" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:id="@+id/tv_fg_listenerbook_list"
            style="@style/tv_weight"
            android:text="@string/list"
            android:textColor="@color/main_buttomtext_grey" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>
