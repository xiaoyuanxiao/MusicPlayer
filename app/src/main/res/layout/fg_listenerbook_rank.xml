<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadmore="true">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlDrawableArrowSize="20dp"
            app:srlDrawableMarginRight="20dp"
            app:srlDrawableProgress="@drawable/ic_progress_hojder"
            app:srlDrawableProgressSize="20dp"
            app:srlEnableLastTime="true"
            app:srlFinishDuration="500"
            app:srlTextSizeTime="10dp"
            app:srlTextSizeTitle="16sp"
            app:srlTextTimeMarginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@color/main_buttomtext_yellow" />

                <TextView
                    android:id="@+id/tv_type_sales"
                    style="@style/tv_standard_12sp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/iv_listenerbookrank_sales"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/temp_hot" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_listenerbookrank_sales"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_listenerbookrank_sales_one"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_sales_two"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_sales_three"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_sales_four"
                        style="@style/tv_standard_10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/d_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@color/main_buttomtext_yellow" />

                <TextView
                    android:id="@+id/tv_type_persons"
                    style="@style/tv_standard_12sp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/iv_listenerbookrank_persons"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/temp_hot5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_listenerbookrank_persons"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_listenerbookrank_persons_one"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_persons_two"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_persons_three"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_persons_four"
                        style="@style/tv_standard_10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/d_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@color/main_buttomtext_yellow" />

                <TextView
                    android:id="@+id/tv_type_recorder"
                    style="@style/tv_standard_12sp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/iv_listenerbookrank_recorder"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/temp_hot4" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_listenerbookrank_recorder"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_listenerbookrank_recorder_one"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_recorder_two"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_recorder_three"
                        style="@style/tv_standard_10sp" />

                    <TextView
                        android:id="@+id/tv_listenerbookrank_recorder_four"
                        style="@style/tv_standard_10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/d_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/view" />
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>