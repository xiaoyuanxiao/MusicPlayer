<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <ImageView
        android:id="@+id/iv_editorspicks"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/iv_editorspicks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_editorspicks_title"
            android:maxLines="2"
            android:ellipsize="end"
            style="@style/tv_standard_12sp" />

        <TextView
            android:id="@+id/tv_editorspicks_author"
            android:maxLines="5"
            android:ellipsize="end"
            style="@style/tv_standard_9sp" />

        <TextView
            android:id="@+id/tv_editorspicks_description"
            android:maxLines="4"
            android:ellipsize="end"
            style="@style/tv_standard_9sp" />
    </LinearLayout>

</RelativeLayout>